{
  // 设计文档模板
  // 用于描述页面的视觉设计、布局、交互和动画效果
  // 注意：此模板提供结构框架，可根据实际需求扩展或省略部分字段
  // 所有字段都有注释说明，必填字段会明确标注
  
  // ===========================================
  // 1. 整体设计理念（必填）
  // ===========================================
  designPhilosophy: {
    // 设计目标：简洁描述设计要达成的目标
    // 示例："全屏沉浸式体验"、"简洁高效的信息展示"等
    goal: "设计目标描述",
    
    // 主题集成：说明与现有主题系统的关系
    // 可选：如果不需要主题集成可以省略
    themeIntegration: {
      // 一致性：保持与现有主题一致的部分
      consistency: [
        // 示例：["使用 Ocean Breeze 的蓝色系配色", "复用现有的渐变系统"]
        "保持一致性点1",
        "保持一致性点2",
      ],
      
      // 创新点：与现有主题不同的设计突破
      // 可选
      innovation: [
        // 示例：["引入新的配色方案", "更强烈的视觉层次"]
        "创新点1",
        "创新点2",
      ],
    },
    
    // 设计趋势：参考的设计趋势或风格
    // 可选
    trends: [
      // 示例：["全屏沉浸式设计", "简洁直观的界面"]
      "设计趋势1",
      "设计趋势2",
    ],
  },

  // ===========================================
  // 2. 配色方案（必填）
  // ===========================================
  colorScheme: {
    // 背景渐变：Light 和 Dark 模式下的背景渐变
    // 可选：如果不需要渐变可以省略
    backgroundGradients: {
      // Light 模式
      light: {
        // 正常状态
        normal: {
          type: "LinearGradient", // 或 "RadialGradient"
          direction: "topToBottom", // 渐变方向
          colors: [
            // 颜色值：应该引用主题中的颜色常量，不要硬编码
            // 示例：["OceanBreezeColorSchemes.primaryColor", "OceanBreezeColorSchemes.secondaryColor"]
            "颜色常量1",
            "颜色常量2",
          ],
          stops: [0.0, 1.0], // 渐变停止点（0.0-1.0）
          note: "所有颜色都应该从主题系统引用，不要硬编码颜色值",
        },
        
        // 其他状态（可选）
        // 例如：complete（完成状态）、paused（暂停状态）等
        // otherState: {
        //   // 类似 normal 的结构
        // },
      },
      
      // Dark 模式
      dark: {
        normal: {
          // 类似 light.normal 的结构
          type: "LinearGradient",
          direction: "topToBottom",
          colors: ["颜色常量1", "颜色常量2"],
          stops: [0.0, 1.0],
          note: "所有颜色都应该从主题系统引用，不要硬编码颜色值",
        },
      },
    },
    
    // 专用配色：特定功能或组件的专用颜色
    // 可选
    specificColors: {
      // 示例：{
      //   active: {
      //     primary: "OceanBreezeColorSchemes.activeColor",
      //   },
      //   warning: {
      //     primary: "OceanBreezeColorSchemes.warningColor",
      //   },
      // }
    },
  },

  // ===========================================
  // 3. 布局结构（必填）
  // ===========================================
  layout: {
    // 全屏布局：是否为全屏页面
    // 可选，默认 false
    fullScreen: false,
    
    // 隐藏导航栏：是否隐藏底部导航栏
    // 可选，默认 false
    hideNavigation: false,
    
    // 顶部栏配置
    // 可选
    topBar: {
      // 显示返回按钮
      showBackButton: true,
      // 背景样式
      background: "transparent_or_semi_transparent", // 或具体颜色值
      // 按钮位置
      position: "topLeft", // 或 "topRight" 等
    },
    
    // 内容区域布局
    contentLayout: {
      // 布局方向
      direction: "vertical", // 或 "horizontal"
      // 主轴对齐
      mainAxisAlignment: "center", // "start", "center", "end", "spaceBetween" 等
      // 交叉轴对齐
      crossAxisAlignment: "center", // "start", "center", "end" 等
      // 使用 SafeArea
      safeArea: true,
      // 内边距
      padding: {
        horizontal: 16, // dp
        vertical: 16, // dp
      },
    },
    
    // 区域划分：页面的主要区域
    sections: [
      {
        // 区域名称
        name: "section1",
        // 位置
        position: "top", // "top", "middle", "bottom"
        // 权重
        weight: "flexible", // "flexible", "fixed"
        // 子组件列表
        children: [
          // 示例：["component1", "component2"]
          "子组件1",
          "子组件2",
        ],
      },
      // 可以添加更多区域
    ],
  },

  // ===========================================
  // 4. UI 组件设计（必填）
  // ===========================================
  // 注意：根据实际页面，这部分可以包含不同的组件设计
  // 例如：计时显示、任务信息、按钮、列表等
  
  // 示例：主要显示组件
  mainDisplay: {
    // 组件位置
    position: "top_center",
    
    // 字体样式
    typography: {
      // 字号（sp）
      fontSize: 24,
      // 字重
      fontWeight: "regular", // "regular", "medium", "semiBold", "bold" 等
      // 颜色
      color: {
        light: "#000000", // 或引用主题颜色常量
        dark: "#FFFFFF",
      },
    },
    
    // 背景样式（可选）
    background: {
      // 背景类型
      type: "transparent", // "transparent", "solid", "gradient", "semi_transparent_card"
      // 如果有颜色，使用颜色常量引用
      color: "颜色常量或值",
      // 圆角
      borderRadius: 8, // dp
      // 内边距
      padding: 16, // dp
    },
  },

  // ===========================================
  // 5. 交互流程（必填）
  // ===========================================
  interactions: {
    // 用户操作流程
    userFlows: [
      {
        // 流程名称
        name: "主流程",
        // 步骤列表
        steps: [
          // 示例：["用户点击按钮", "显示弹窗", "用户输入信息", "提交表单"]
          "步骤1",
          "步骤2",
          "步骤3",
        ],
      },
      // 可以添加更多流程
    ],
    
    // 交互细节（可选）
    // 例如：点击、滑动、长按等手势的响应
    gestures: {
      // 示例：
      // tap: {
      //   action: "显示详情",
      // },
      // swipeLeft: {
      //   action: "删除项目",
      // },
    },
  },

  // ===========================================
  // 6. 动画效果（可选）
  // ===========================================
  animations: {
    // 页面进入动画
    pageEnter: {
      type: "fade_in", // "fade_in", "slide_in", "scale_in" 等
      duration: 300, // 毫秒
      curve: "Curves.easeOut", // Flutter 动画曲线
    },
    
    // 其他动画（可选）
    // 例如：页面退出动画、状态切换动画等
    // pageExit: {
    //   type: "fade_out",
    //   duration: 300,
    //   curve: "Curves.easeOut",
    // },
  },

  // ===========================================
  // 7. 响应式设计（可选）
  // ===========================================
  responsive: {
    // 手机竖屏
    mobilePortrait: {
      // 布局方式
      layout: "vertical_centered",
      // 字体大小等配置
      fontSize: 16,
      // 其他配置...
    },
    
    // 平板横屏（可选）
    // tabletLandscape: {
    //   layout: "horizontal_distributed",
    //   fontSize: 18,
    // },
    
    // 桌面（可选）
    // desktop: {
    //   layout: "centered_with_max_width",
    //   maxWidth: 800,
    //   fontSize: 20,
    // },
  },

  // ===========================================
  // 8. 手势支持（可选）
  // ===========================================
  gestures: {
    // 双击（可选）
    // doubleTap: {
    //   enabled: false,
    //   action: "toggle_pause",
    // },
    
    // 长按（可选）
    // longPress: {
    //   enabled: false,
    //   action: "quick_complete",
    // },
    
    // 滑动手势（可选）
    // swipeLeft: {
    //   enabled: true,
    //   action: "delete_item",
    // },
  },

  // ===========================================
  // 9. 待确认问题（必填）
  // ===========================================
  openQuestions: [
    {
      // 问题描述
      question: "问题描述",
      // 问题详细说明
      description: "问题的详细描述和背景信息",
      // 可选方案列表
      options: [
        // 示例：["方案1", "方案2", "方案3"]
        "方案1",
        "方案2",
      ],
      // 推荐方案（可选）
      recommendation: "推荐的方案及理由",
      // 是否已确认（可选）
      confirmed: false,
      // 确认后的答案（可选）
      confirmedAnswer: "确认后的最终答案",
    },
    // 可以添加更多问题
  ],
}
