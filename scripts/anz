cmd=${1:-help}
case "$cmd" in
  clean) clean_project ;;
  build:aab) build_aab ;;
  icons:generate) generate_icons_all ;;
  help|--help|-h) show_help ;;
  *) echo -e "${RED}æœªçŸ¥å‘½ä»¤: $cmd${NC}"; echo; show_help; exit 1 ;;
esac

